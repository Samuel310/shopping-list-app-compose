<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.GroceryApp" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Splash Screen Theme -->
    <style name="Theme.GroceryApp.SplashScreen" parent="Theme.SplashScreen">
        <!-- Required: Theme to apply after the splash screen is dismissed -->
        <item name="postSplashScreenTheme">@style/Theme.GroceryApp</item>

        <!-- Optional: background color of the splash screen -->
        <item name="android:windowSplashScreenBackground">@color/purple_500</item>

        <!-- Optional: Use your app's launcher icon or a specific drawable -->
<!--                <item name="windowSplashScreenIcon">@drawable/ic_launcher_new_foreground</item>-->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>

        <!-- Optional: color behind the icon. Useful if there isn't enough contrast. -->
        <item name="android:windowSplashScreenIconBackgroundColor">@color/purple_500</item>

        <!-- Optional: Branding image (logo at the bottom). Design guidelines recommend against using this. -->
        <!-- <item name="windowSplashScreenBrandingImage">@drawable/branding_image</item> -->
    </style>
</resources>